{
	"manifest_version": 2,
    "name": "MoreShares",
    "version": "0.0.3",
	"description": "Share on various social media sites",
    "permissions": ["activeTab"],
    "background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
        "default_title": "MoreShares: share on various social media sites",
        "default_popup": "popup.html"
	},
	"icons": {
		"32": "images/share-32.png",
		"64": "images/share-64.png",
		"128": "images/share-128.png",
		"256": "images/share-256.png"
    },
    "options_ui": {
		"page": "option.html",
		"open_in_tab": true
	}
}
